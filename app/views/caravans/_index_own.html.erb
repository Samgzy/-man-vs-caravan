 <div class="container padded">
  <% @caravans.each_slice(3) do |caravans| %>
    <div class="row">
     <% caravans.each do |caravan| %>
      <div class="col-xs-12 col-md-4">
        <div class="card">
          <%= cl_image_tag caravan.photo, :height=>222, :crop=>:thumb, class: "card-image" %>
            <div class="card-price inline"><%= caravan.price.to_s + "â‚¬" %></div>
            <div class="card-description">
              <h3><%= caravan.title %></h3>
              <p><%= caravan.city %></p>
            </div>
            <%= cl_image_tag caravan.user.photo, :radius=>"max", :width=>50, :height=>50, :crop=>:thumb, :gravity=>:face, class: "card-user avatar-large" %>
            <%= link_to caravan.title, user_own_caravan_path(current_user, caravan), class: "card-link" %>
          </div>
      </div>
    <% end %>
  </div>
  <% end %>
</div>

