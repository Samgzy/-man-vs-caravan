<div class="profile-header-wrapper">
  <div class="profile-header-container text-center">
    <div class="profile-header-infos">
       <%= cl_image_tag @user.photo, :radius=>"max", :width=>100, :height=>100, :crop=>:thumb, :gravity=>:face, :background=>"#edefed", class: "img-circle" %>
        <h2>Welcome home <%= @user.first_name %></h2>
    </div>


    <div class="tabs">
      <%= link_to "#view_caravans", class: "tab active", "data-target" => "#view_caravans" do %>
        <h3>View</h3>
        <p>your caravans</p>
      <% end %>
      <%= link_to "#bookings", class: "tab", "data-target" => "#bookings" do %>
        <h3>View</h3>
        <p>your bookings</p>
      <% end %>
      <%= link_to "#profile", class: "tab", "data-target" => "#profile" do %>
        <h3>Edit</h3>
        <p>your profile</p>
      <% end %>
      <%= link_to "#add_caravans", class: "tab", "data-target" => "#add_caravans" do %>
        <h3>Add</h3>
        <p>a caravan</p>
      <% end %>
    </div>
  </div>
</div>
<div class="container">
  <div class="tab-content" id="view_caravans">
    <%= render 'caravans/index_own' %>
  </div>
  <div class="tab-content hidden" id="bookings">
    <%= render 'rentals/index' %>
  </div>
  <div class="tab-content hidden" id="profile">
    <%= render 'shared/user_form' %>
  </div>
  <div class="tab-content hidden" id="add_caravans">
    <%= render "shared/caravan_form" %>
  </div>
</div>
